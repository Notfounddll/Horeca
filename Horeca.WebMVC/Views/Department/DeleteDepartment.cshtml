@{
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Are you sure you want to delete this Department?</h5>
            </div>
            <form asp-action="DeleteDepartment">
                <div class="card-body">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @type = "text", @readonly = true, @style = "display: none;"  })                            
                    @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @type = "text", @readonly = true  })
                </div>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>