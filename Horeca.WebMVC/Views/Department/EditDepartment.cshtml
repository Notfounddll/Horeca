@{
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Edit department</h5>
            </div>
            <form asp-action="EditDepartment">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="card-body">
                    <div>New name</div>
                    @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @type = "text"})
                    @Html.ValidationMessage("Department", "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Id_Location, new { @class = "form-control", @type = "number", @readonly = true, @style = "display: none;"})  
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @type = "number", @readonly = true, @style = "display: none;"})
                </div>
                <input type="submit" value="Edit" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>