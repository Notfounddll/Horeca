                <div class="sidebar-user">
                    <div class="font-weight-bold">Welcome,</div>
                    @*<div class="font-weight-bold">@Name </div>*@

                </div>

                <ul class="sidebar-nav">
                    @*@if (Rights == "Level2")
                    {*@
                    <li class="sidebar-header">
                        Administration
                    </li>
                    <li class="sidebar-item">
                        <a class="nav-link text-dark" asp-controller="Location" asp-action="DisplayLocations"><i class="align-middle mr-2 fas fa-fw fa-folder"></i>Stocks</a>
                        <a class="nav-link text-dark" asp-controller="Department" asp-action="CreateProduct"><i class="align-middle mr-2 fas fa-fw fa-folder"></i>Add Product</a>

