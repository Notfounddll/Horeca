@{
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">New Location</h5>
            </div>
            <form asp-action="CreateLocation">
                <div class="card-body">
                    <div>New location name</div>
                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @type = "text"})
                </div>
                <input type="submit" value="Add" class="btn btn-pill btn-primary btnAdd" />
            </form>
        </div>
    </div>
</div>