@model IEnumerable<Horeca.DataBaseLibrary.Models.LocationModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-12 col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Locations</h5>
                <h6 class="card-subtitle text-muted">Select location to view stocks</h6>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:40%;">Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Location
                            </td>
                            <td>
                                <a class="btn btn-pill btn-primary btnView" asp-controller="Location" asp-action="ViewStockByIdLocation" asp-route-id="@item.Id">View Stocks</a>
                                <a class="btn btn-pill btn-danger" asp-controller="Location" asp-action="EditLocation" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-pill btn-danger" asp-controller="Location" asp-action="DeleteLocation" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-pill btn-primary btnAdd" asp-controller="Location" asp-action="CreateLocation">Add</a>
</div>