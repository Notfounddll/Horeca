@model Horeca.DataBaseLibrary.Models.AuthentificationModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">New Employee</h5>
            </div>
            <form asp-action="CreateEmployeeUser">
                <div class="card-body">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div>Name</div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text"})
                    <div>Email</div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "text"})
                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                    <div>Password</div>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "text"})
                    @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Add" class="btn btn-pill btn-primary btnAdd" />
            </form>
        </div>
    </div>
</div>