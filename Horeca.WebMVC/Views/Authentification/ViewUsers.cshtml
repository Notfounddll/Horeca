@model IEnumerable<Horeca.DataBaseLibrary.Models.AuthentificationModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-12 col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Users</h5>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:40%;">Id</th>
                        <th style="width:25%">Email</th>
                        <th style="width:25%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                <a class="btn btn-pill btn-danger" asp-controller="Authentification" asp-action="DeleteEmployee" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-pill btn-primary btnAdd" asp-controller="Authentification" asp-action="CreateEmployeeUser">Add</a>
</div>