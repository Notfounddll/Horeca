@model Horeca.DataBaseLibrary.Models.StockModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Add Stock</h5>
            </div>
            <form asp-action="AddStockAmount">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="card-body">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @type = "text", @readonly = true})
                    <div>Current Amount</div>
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @type = "number", @readonly = true})
                    <div>Add Amount</div>
                    @Html.TextBoxFor(m => m.UpdateValue, new { @class = "form-control", @type = "number" })
                    @Html.ValidationMessage("UpdateValue", "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @type = "number", @readonly = true, @style = "display: none;"})
                    @Html.TextBoxFor(m => m.Id_Location, new { @class = "form-control", @type = "number", @readonly = true, @style = "display: none;"})  
                </div>
                <input type="submit" value="Edit" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>